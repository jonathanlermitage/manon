    </organization>
    <developers>
        <developer>
            <name>Jonathan Lermitage</name>
        </developer>
    </developers>
    <contributors>
    </contributors>
    <licenses>
        <license>
            <name>MIT</name>
            <url>https://opensource.org/licenses/MIT</url>
            <distribution>repo</distribution>
        </license>
    </licenses>

    <properties>
        <start-class>manon.Application</start-class>

        <java.version>1.9</java.version>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
        <surefireArgLine>
            -ea -Xms128m -Xmx512m -Dspring.profiles.active=test,metrics,embeddedcache -Dfile.encoding=UTF-8
            -Djava.awt.headless=true -XX:CompileThreshold=1500
        </surefireArgLine>

        <!-- Annotation -->
        <lombok.version>1.16.20</lombok.version>
        <jetbrains.annotations.version>16.0.1</jetbrains.annotations.version>

        <!-- Testing -->
        <assertj-core.version>3.9.1</assertj-core.version>
        <hamcrest-library.version>1.3</hamcrest-library.version>
        <janino.version>3.0.8</janino.version>
        <testng.version>6.14.2</testng.version>
        <rest-assured.version>3.0.7</rest-assured.version>
        <mockito-core.version>2.16.0</mockito-core.version>
        <hsqldb.version>2.4.0</hsqldb.version>
        <embed.mongo.version>2.0.3</embed.mongo.version>

        <!-- JSON -->
        <jackson.version>2.9.4</jackson.version>
        <jackson-annotations.version>2.9.4</jackson-annotations.version>
        <jackson-databind.version>2.9.4</jackson-databind.version>

        <!-- SQL -->
